# ============================================
# CV Matcher — Production Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# Server
PORT=5000
HOST=0.0.0.0
NODE_ENV=production

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cv_matcher
DB_USER=cv_matcher_user
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000

# Authentication
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
SESSION_SECRET=CHANGE_ME_TO_ANOTHER_RANDOM_STRING

# CORS — comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Uploads
UPLOAD_DIR=./uploads/cvs
MAX_FILE_SIZE=10485760

# Qwen LLM (AI features)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Optional — Auto-initialize database on startup
AUTO_CREATE_DB=false
AUTO_MIGRATE=false
FORCE_RECREATE_TABLES=false
